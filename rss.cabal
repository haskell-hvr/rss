source-repository head
  Type:     git
  Location: git://github.com/basvandijk/rss.git

Library
  build-depends: base       >= 3      && < 5
               , network    >= 2.0    && < 2.5
               , HaXml      >= 1.19.2 && < 1.24
               , time       >= 1.1.2  && < 1.5
               , old-locale >= 1.0    && < 1.1
  Exposed-Modules: Text.RSS
  ghc-options: -Wall
